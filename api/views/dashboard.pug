html 
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0") 
        link(rel="stylesheet", href="/assets/css/bootstrap.min.css")
        link(rel="stylesheet", href="/assets/icons")
        link(rel="stylesheet", href="/assets/css/style.css")
        script(src="/assets/js/bootstrap.min.js")
        title Admin | Dashboard
    body
        div
            include partials/navbar
            div(class="container-sm")
                div(class='welcome-block')
                    h3=`Welcome, ${user.fullname}` 
                    p=`Last Logged in | ${new Date(user.lastLoggedIn).toLocaleString()}`
                div(class="row mt-3 dashboard-panel g-1 justify-content-center")
                    div(class="col-lg-4 col-md-6")
                        a(href="/admin/members")
                            div(class="card bg-light p-1 text-dark fw-bold" style="width: 100%")
                                img(src="/assets/images/cooperators.png", alt="Cooperators Logo")
                                div(class="card-body")    
                                    p=`${members.length} Members`
                    div(class="col-lg-4 col-md-6")    
                        //- a(href="/admin/orders")
                        a(href="#")
                            div(class="card bg-light p-1 text-dark fw-bold" style="width: 100%")
                                img(src="/assets/images/savings.png", alt="Savings Logo")
                                div(class="card-body")    
                                    p total savings 
                    div(class="col-lg-4 col-md-6")    
                        //- a(href="/admin/payments")
                        a(href="#")
                            div(class="card bg-light p-1 text-dark fw-bold" style="width: 100%")
                                img(src="/assets/images/loan.png", alt="Loan Logo")
                                div(class="card-body")    
                                    p total loan
        include partials/footer
