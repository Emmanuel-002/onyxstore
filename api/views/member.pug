        title=`Profile | ${member.fullname}`
    body 
        div 
            include partials/navbar
            div(class="container-sm mt-4")
                div(class="row g-2")
                    div(class="col-lg-6 col-md-12 col-sm-12")
                        div(class="card-media" style="width: 100%")
                            if member.photo.image.data
                                img(class="align-self-start mr-3" src=`data:${member.photo.image.contentType};base64,${Buffer.from(member.photo.image.data).toString('base64')}` alt=`${member.fullname}` width="100px" height="100px") 
                            else 
                                img(class="align-self-start mr-3" alt="No Picture")
                
                    div(class="product-table col-lg-6 col-md-12 col-sm-12" style="overflow-x: auto")
                        table(id="example" class="table table-hover table-bordered table-striped")
                            tbody 
                                tr
                                    td(class="mx-2")
                                        <strong>Member ID</strong>
                                    td(class="mx-2")=member.memberId
                                tr
                                    td(class="mx-2")
                                        <strong>Full Name</strong>
                                    td(class="mx-2")=member.fullname
                                if(member.svcno)
                                    tr
                                        td(class="mx-2")
                                            <strong>Service Number</strong>
                                        td(class="mx-2")=member.svcno
                                tr
                                    td(class="mx-2")
                                        <strong>Unit</strong>
                                    td(class="mx-2")=member.unit
                                tr
                                    td(class="mx-2")
                                        <strong>Email</strong>
                                    td(class="mx-2")=member.email
                                tr
                                    td(class="mx-2")
                                        <strong>Marital Status</strong>
                                    td(class="mx-2")=member.maritalstatus
                                if(member.spousename)
                                    tr
                                        td(class="mx-2")
                                            <strong>Spouse Name</strong>
                                        td(class="mx-2")=member.spousename
                                tr
                                    td(class="mx-2")
                                        <strong>Next of Kin</strong>
                                    td(class="mx-2")=`${member.nokname}, ${member.nokrelationship}`
                                tr
                                    td(class="mx-2")
                                        <strong>State of Origin</strong>
                                    td(class="mx-2")=member.stateoforigin
                                tr
                                    td(class="mx-2")
                                        <strong>LGA</strong>
                                    td(class="mx-2")=member.lga
                                tr
                                    td(class="mx-2")
                                        <strong>Address</strong>
                                    td(class="mx-2")=member.address
                                tr
                                    td(class="mx-2")
                                        <strong>Bank Name</strong>
                                    td(class="mx-2")=member.userbank
                                tr
                                    td(class="mx-2")
                                        <strong>Account Number</strong>
                                    td(class="mx-2")=member.useraccount
                                tr
                                    td(class="mx-2")
                                        <strong>Account Name</strong>
                                    td(class="mx-2")=member.accountname
                                tr
                                    td(class="mx-2")
                                        <strong>Monthly Deduction</strong>
                                    td(class="mx-2")=member.amount
